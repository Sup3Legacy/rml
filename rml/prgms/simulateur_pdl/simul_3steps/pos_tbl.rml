open Global


let get tbl id = tbl.(id)

let set tbl id posx posy age = 
  let _, _, age_tbl = tbl.(id) in
  if age > age_tbl then
    tbl.(id) <- (posx,posy,age)

let update tbl neighbors age =
(*
  for id = 0 to nb_node-1 do
    let x, y, age = tbl.(id) in
    tbl.(id) <- (x, y, age+1)
  done;
*)
  List.iter
    (fun info -> set tbl info.hello_id info.hello_posx info.hello_posy age)
    neighbors
