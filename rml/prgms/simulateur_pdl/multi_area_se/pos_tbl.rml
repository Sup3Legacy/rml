open Global


let get tbl id = tbl.(id)
let set tbl id posx posy age = tbl.(id) <- (posx,posy,age)

let update tbl neighbors age =
(*
  for id = 0 to nb_node-1 do
    let x, y, age = tbl.(id) in
    tbl.(id) <- (x, y, age+1)
  done;
*)
  List.iter
    (fun info -> tbl.(info.info_id) <- (info.info_posx, info.info_posy, age))
    neighbors
