open Global

let make src =
(*  if src.node_id = !main_node then*)
  if (Random.int 100) < !msg_proba then 
    let msg = ref [] in
    let dest = Random.int !nb_node in
    let len = (Random.int !msg_len) + 1 in
    for i = 1 to len do
      msg := (dest,len)::!msg
    done;
    !msg
  else
    []
